<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:id="@+id/tv_string_vale"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="selected value :" />

    <TextView
            android:id="@+id/update_string_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:text="update strings" />

    <cn.wongzhenyu.recyclerwheelview.StringRecyclerWheelView
            android:id="@+id/string_wheel_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:wheelSelectedItemBackground="@drawable/string_selected_wheel_bg" />
</LinearLayout>